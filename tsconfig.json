{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["dom", "es2018"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "paths": {
      "rxjs/*": ["node_modules/rxjs/_esm2015/*"]
    },
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"]
  }
}
